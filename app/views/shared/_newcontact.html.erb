<!-- contact block -->
			<section id="contact" class="block contact-block" style="padding-top: 80px; margin-top: -10px;">
				<div class="title-holder">
					<h2><%=t('Contact.title')%></h2>
					<div class="subtitle"><%=t('Contact.subtitle')%></div>
				</div>
				<div class="container-fluid">
					<!--<form class="contact-form" >-->
					<%= form_for @contact, class: "contact-form", url: home_index_path, remote: true do |f| %>
						<div class="row">
							<div class="col-sm-4">
								<div class="form-group">
									<%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>
									<!--<%=raw t('Contact.input_name')%>
                  <input type="text" placeholder="Enter your Full Name" required>-->
								</div>
							</div>
							<div class="col-sm-4">
								<div class="form-group">
                  <%=raw t('Contact.input_email')%>
									<!--<input type="text" placeholder="Enter your Email Address" required>-->
								</div>
							</div>
							<div class="col-sm-4">
								<div class="form-group">
                  <%=raw t('Contact.input_number')%> 
									<!--<input type="text" placeholder="Enter your Contact Number">-->
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="form-group">
                  <%=raw t('Contact.input_message')%></textarea>
                  <!--<textarea placeholder="Enter your Message" required></textarea>-->
								</div>
							</div>
						</div>
						<div class="btn-holder">
							<button class="btn btn-primary">Submit</button>
						</div>
					</form>
				</div>
				<div class="google-map">
					<iframe
						src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14048.211570060965!2d-0.1228208876550775!3d51.505942908931324!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2suk!4v1481805868782"
						allowfullscreen></iframe>
				</div>
				<div class="container-fluid">
					<div class="contact-info">
						<ul>
							<li><i class="fas fa-envelope"></i> info@cnery.pt</li>
							<li><i class="fas fa-phone"></i> +351 - 925-340-094</li>
							<li><i class="fas fa-map-marker-alt"></i> Lisbon, Portugal</li>
						</ul>
					</div>
				</div>
			</section>